<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="club_papaya.Views.SociosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:club_papaya.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource PaginaBackgroundColor}"
    mc:Ignorable="d">

    <ListView x:ConnectionId='2'
        x:Name="collection"
        Grid.Row="2"
        IsItemClickEnabled="True"
                                        
                                  
        SelectionMode="None">
        <ListView.ItemTemplate>
            <DataTemplate                         >
                <Grid x:ConnectionId='4' Margin="0,12,0,12"                                               >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image x:ConnectionId='5'
                        x:Name="connectedElement"
                        MaxHeight="100"
                                                  
                        Stretch="Uniform" />

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock x:ConnectionId='6'
                            Margin="0,0,0,6"
                            HorizontalAlignment="Left"
                            Foreground="{StaticResource PaginaTitulo}"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                                                      />
                        <TextBlock x:ConnectionId='7'
                            Margin="0,0,0,6"
                            HorizontalAlignment="Left"
                            Foreground="{StaticResource PaginaTitulo}"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                                                     />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontWeight="Light"
                                Foreground="{StaticResource TextColor}"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="Email: " />
                            <TextBlock x:ConnectionId='9'
                                Margin="5,0,0,0"
                                Foreground="{StaticResource TextColor}"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                      />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                FontWeight="Light"
                                Foreground="{StaticResource TextColor}"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                Text="Mobile: " />
                            <TextBlock x:ConnectionId='8'
                                Margin="5,0,0,0"
                                Foreground="{StaticResource TextColor}"
                                Style="{ThemeResource BodyStrongTextBlockStyle}"
                                                       />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</Page>

