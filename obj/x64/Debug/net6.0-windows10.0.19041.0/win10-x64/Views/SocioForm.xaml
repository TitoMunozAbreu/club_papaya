<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="club_papaya.Views.SocioForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:club_papaya.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource PaginaBackgroundColor}"
    mc:Ignorable="d">

    <Grid>
        <Image
            Height="80"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="C:\Users\34618\Workspace_C#\club_papaya\Assets\user.png" />

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button x:ConnectionId='2'
                x:Name="GoBackButton"
                Margin="10,10,10,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                                        >
                <FontIcon Glyph="&#xE72B;" />
            </Button>

            <!--  Titulo  -->
            <TextBlock x:ConnectionId='3'
                x:Name="titulo"
                Grid.Row="0"
                Margin="0,0,0,10"
                Foreground="{StaticResource PaginaTitulo}"
                Style="{ThemeResource HeaderTextBlockStyle}"
                Text="Registrar Socio" />

            <!--  validacion Socio  -->
            <InfoBar x:ConnectionId='4'
                x:Name="alert"
                Margin="0,0,0,10"
                IsOpen="False" />

            <!--  Dni  -->
            <TextBox x:ConnectionId='5'
                x:Name="txtDni"
                Margin="0,0,0,10"
                Background="{StaticResource InputBoxColor}"
                Foreground="{StaticResource TextColor}"
                                
                PlaceholderForeground="{StaticResource PlaceHolderColor}"
                PlaceholderText="Dni / Nie"
                                    />
            <!--  validacion nombre  -->
            <TextBlock x:ConnectionId='6'
                x:Name="errorDni"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Nombre  -->
            <TextBox x:ConnectionId='7'
                x:Name="txtFirstName"
                Margin="0,0,0,10"
                Background="{StaticResource InputBoxColor}"
                Foreground="{StaticResource TextColor}"
                                      
                PlaceholderForeground="{StaticResource PlaceHolderColor}"
                PlaceholderText="Nombre"
                                          />
            <!--  validacion nombre  -->
            <TextBlock x:ConnectionId='8'
                x:Name="errorFirstName"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Apellido  -->
            <TextBox x:ConnectionId='9'
                x:Name="txtLastName"
                Margin="0,0,0,10"
                Background="{StaticResource InputBoxColor}"
                Foreground="{StaticResource TextColor}"
                                     
                PlaceholderForeground="{StaticResource PlaceHolderColor}"
                PlaceholderText="Apellido"
                                         />
            <!--  validacion apellido  -->
            <TextBlock x:ConnectionId='10'
                x:Name="errorLastName"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Email  -->
            <TextBox x:ConnectionId='11'
                x:Name="txtEmail"
                Margin="0,0,0,10"
                Background="{StaticResource InputBoxColor}"
                Foreground="{StaticResource TextColor}"
                                  
                PlaceholderForeground="{StaticResource PlaceHolderColor}"
                PlaceholderText="Email"
                                      />
            <!--  validacion email  -->
            <TextBlock x:ConnectionId='12'
                x:Name="errorEmail"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Movil  -->
            <TextBox x:ConnectionId='13'
                x:Name="txtMobile"
                Margin="0,0,0,10"
                Background="{StaticResource InputBoxColor}"
                Foreground="{StaticResource TextColor}"
                                   
                PlaceholderForeground="{StaticResource PlaceHolderColor}"
                PlaceholderText="Movil"
                                       />
            <!--  validacion movil  -->
            <TextBlock x:ConnectionId='14'
                x:Name="errorMobile"
                Margin="0,0,0,10"
                Foreground="Red"
                Style="{ThemeResource CaptionTextBlockStyle}"
                Visibility="Collapsed" />

            <!--  Boton guardar  -->
            <Button x:ConnectionId='15'
                x:Name="btnGuardar"
                Grid.Row="11"
                Background="Green"
                                          
                Content="Guardar"
                Foreground="White"
                IsEnabled="False" />
        </StackPanel>
    </Grid>
</Page>

