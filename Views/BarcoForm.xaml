<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="club_papaya.Views.BarcoForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:club_papaya.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <!--  Titulo  -->
        <TextBlock
            x:Name="titulo"
            Grid.Row="0"
            Margin="0,0,0,10"
            Style="{ThemeResource HeaderTextBlockStyle}"
            Text="Registrar Barco" />

        <!--  Validacion Barco  -->
        <InfoBar
            x:Name="alert"
            Margin="0,0,0,10"
            IsOpen="False" />

        <!--  Name  -->
        <TextBox
            x:Name="txtName"
            Margin="0,0,0,10"
            GotFocus="GfName"
            PlaceholderText="Nombre"
            TextChanged="TcName" />
        <!--  Validacion Name  -->
        <TextBlock
            x:Name="errorName"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

        <!--  MooringNumber  -->
        <TextBox
            x:Name="txtMooringNumber"
            Margin="0,0,0,10"
            GotFocus="GfMooringNumber"
            PlaceholderText="Numero Amarre"
            TextChanged="TcMooringNumber" />
        <!--  Validacion MooringNumber  -->
        <TextBlock
            x:Name="errorMooringNumber"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

        <!--  PaymentFee  -->
        <TextBox
            x:Name="txtPaymentFee"
            Margin="0,0,0,10"
            GotFocus="GfPaymentFee"
            PlaceholderText="Couta pago"
            TextChanged="TcPaymentFee" />
        <!--  Validacion PaymentFee  -->
        <TextBlock
            x:Name="errorPaymentFee"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

        <!--  Lista de Socios  -->
        <ComboBox
            x:Name="cmbSocios"
            Margin="0,0,0,10"
            DisplayMemberPath="FirstName"
            ItemsSource="{x:Bind Socios, Mode=OneWay}"
            PlaceholderText="Seleccione un Socio"
            SelectionChanged="CmbSocios_SelectionChanged" />
        <!--  Validacion Socio  -->
        <TextBlock
            x:Name="errorSocio"
            Margin="0,0,0,10"
            Foreground="Red"
            Style="{ThemeResource CaptionTextBlockStyle}"
            Visibility="Collapsed" />

        <!--  Boton guardar  -->
        <Button
            x:Name="btnGuardar"
            Grid.Row="11"
            Background="Green"
            Click="btn_RegistrarBarco"
            Content="Guardar"
            Foreground="White"
            IsEnabled="False" />
    </StackPanel>
</Page>
